<div class="modal fade" id="<%= contribution.to_param %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= contribution.to_param %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1"><%= t('contribution.attributes.value') %></span>
          <input type="text" class="form-control" disabled value="<%= number_to_currency(contribution.value) %>" aria-describedby="basic-addon1">
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1"><%= t('contribution.attributes.date') %></span>
          <input type="text" class="form-control" disabled value="<%= contribution.created_at.strftime('%d/%m/%Y') %>" aria-describedby="basic-addon1">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>