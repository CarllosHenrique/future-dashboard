<% if user_signed_in? %>
<nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="<%= root_path %>"><%= t('dashboard') %></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <% if current_user.admin? %>
          <li class="nav-item">
            <a class="nav-link  <%= 'active' if current_page?(users_path) %>" aria-current="page" href="<%= users_path %>"><%= t('controller.users') %></a>
          </li>
        <% end %>

        <% if current_user.admin? %>
          <li class="nav-item">
            <a class="nav-link  <%= 'active' if current_page?(contributions_path) %>" aria-current="page" href="<%= contributions_path %>"><%= t('controller.contributions') %></a>
          </li>
