      </ul>
      <div class="d-flex">
        <div class="dropdown">
          <a class="nav-link dropdown-toggle" style="color: #ffffff;" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <%= current_user.name %>
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li><a class="dropdown-item" href="<%= edit_user_path(current_user)%>"><i class="fa-solid fa-user-edit"></i> <%= t('edit') %></a></li>
            <li>
              <%= link_to destroy_user_session_path, class:"dropdown-item", data: { turbo_method: :delete } do %>
                <i class="fa-solid fa-sign-out"></i> <%= t('sign_out') %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
